@page "/counter"
@inherits RefreshablePageBase

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    protected override void OnInitialized()
    {
        // Set the method to call when a refresh is requested
        if (refreshPage != null) { refreshPage.RefreshPageRequested += IncrementCount5; }
    }

    private void IncrementCount()
    {
        currentCount++;
    }

    // This method is called when a page is requested.
    // It can do anything you need.
    // Here we just increment the counter by 5.
    private void IncrementCount5()
    {
        currentCount += 5;

        // Required to update the page.
        StateHasChanged();
    }
}
